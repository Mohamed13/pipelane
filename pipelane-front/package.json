{
  "name": "pipelane-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prestart": "node tools/inject-env.mjs",
    "start": "ng serve --port 4200",
    "prebuild": "node tools/inject-env.mjs",
    "build": "ng build",
    "pretest": "node tools/inject-env.mjs",
    "test": "jest --passWithNoTests",
    "pree2e": "node tools/inject-env.mjs",
    "e2e": "cypress run",
    "gen:swagger": "node tools/fetch-swagger.mjs",
    "gen:types": "openapi-typescript src/app/api/swagger.json -o src/app/api/openapi-types.ts",
    "gen:api": "npm run gen:swagger && npm run gen:types",
    "lint": "eslint . --ext .ts,.html",
    "lint:fix": "eslint . --ext .ts,.html --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ui:check": "npm run lint && npm run format:check",
    "ui:test": "npm test",
    "ui:e2e": "npm run e2e"
  },
  "dependencies": {
    "@angular/animations": "^20.3.4",
    "@angular/cdk": "^20.2.8",
    "@angular/common": "^20.3.4",
    "@angular/compiler": "^20.3.4",
    "@angular/core": "^20.3.4",
    "@angular/forms": "^20.3.4",
    "@angular/material": "^20.2.8",
    "@angular/platform-browser": "^20.3.4",
    "@angular/platform-browser-dynamic": "^20.3.4",
    "@angular/router": "^20.3.4",
    "angular-shepherd": "^20.0.0",
    "apexcharts": "^5.3.5",
    "ng-apexcharts": "^2.0.3",
    "rxjs": "^7.8.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.5",
    "@angular-eslint/eslint-plugin": "^20.3.0",
    "@angular-eslint/eslint-plugin-template": "^20.3.0",
    "@angular-eslint/template-parser": "^20.3.0",
    "@angular/cli": "^20.3.5",
    "@angular/compiler-cli": "^20.3.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cypress": "^13.13.0",
    "depcheck": "^1.4.7",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsdoc": "^48.9.1",
    "eslint-plugin-rxjs": "^5.0.3",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.0.3",
    "openapi-typescript": "^6.7.6",
    "prettier": "^3.3.3",
    "sass": "^1.93.2",
    "ts-jest": "^29.2.5",
    "ts-prune": "^0.10.3",
    "typescript": "~5.8.3"
  }
}
