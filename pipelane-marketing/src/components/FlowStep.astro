---
import Icon from "./Icon.astro";

interface Props {
  title: string;
  description: string;
  icon?: string;
  index?: number;
}

const { title, description, icon = "spark", index = 0 } = Astro.props as Props;
const stepNumber = index + 1;
---
<article
  class="reveal glass rounded-3xl border border-line/40 p-6 transition-transform duration-300 hover:-translate-y-1 hover:border-primary/50"
  style={`transition-delay: ${index * 60}ms;`}
>
  <div class="flex items-start gap-4">
    <div class="flex h-11 w-11 shrink-0 items-center justify-center rounded-2xl bg-primary/16 text-primary">
      <Icon name={icon} size={24} />
    </div>
    <div class="space-y-2 text-left">
      <p class="text-xs uppercase tracking-[0.3em] text-primary/80">
        Ã‰tape {stepNumber}
      </p>
      <h3 class="text-lg font-semibold tracking-tight on-surface-strong">
        {title}
      </h3>
      <p class="text-sm leading-relaxed on-surface">
        {description}
      </p>
    </div>
  </div>
</article>
