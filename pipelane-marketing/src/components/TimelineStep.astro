---
interface Props {
  number: number;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props as Props;
const stepLabel = number.toString().padStart(2, "0");
---
<div class="reveal relative rounded-3xl glass border border-line/30 p-6 pl-10">
  <div class="absolute -left-5 top-6 flex h-11 w-11 items-center justify-center rounded-full bg-primary text-primaryFg font-semibold shadow-glow">
    {stepLabel}
  </div>
  <h3 class="text-lg font-semibold on-surface-strong">{title}</h3>
  <p class="mt-3 text-sm leading-relaxed text-onSurfaceStrong">{description}</p>
</div>


