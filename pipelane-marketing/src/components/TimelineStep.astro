---
interface Props {
  number: number;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props as Props;
---
<div class="reveal relative rounded-3xl border border-[var(--line)] bg-[rgba(255,255,255,0.04)] p-6 pl-8 backdrop-blur-xl">
  <div class="absolute -left-5 top-6 flex h-10 w-10 items-center justify-center rounded-full bg-[var(--color-primary)] text-[var(--bg-base)] font-semibold shadow-glow">
    0{number}
  </div>
  <h3 class="text-lg font-semibold">{title}</h3>
  <p class="mt-3 text-sm text-[var(--color-muted)]">{description}</p>
</div>
