---
import Icon from "./Icon.astro";

interface Props {
  icon?: string;
  title: string;
  description: string;
  index?: number;
}

const { icon = "spark", title, description, index = 0 } = Astro.props as Props;
---
<article
  class="reveal glass-strong transition-transform duration-350 rounded-3xl border border-line/30 p-8 hover:-translate-y-1 hover:border-primary/60"
  style={`transition-delay: ${index * 70}ms;`}
>
  <div class="flex items-start gap-4">
    <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-primary/18 text-primary">
      <Icon name={icon} size={26} />
    </div>
    <div>
      <h3 class="text-xl font-semibold on-surface-strong">
        {title}
      </h3>
      <p class="mt-4 text-base leading-relaxed on-surface">
        {description}
      </p>
    </div>
  </div>
</article>
