---
interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props as Props;
---
<details class="reveal rounded-2xl border border-[var(--line)] bg-[rgba(255,255,255,0.04)] p-6 transition-colors duration-300 hover:border-[var(--color-primary)]">
  <summary class="flex cursor-pointer list-none items-center justify-between gap-4 text-lg font-medium">
    <span>{question}</span>
    <span class="text-2xl text-[var(--color-primary)]">+</span>
  </summary>
  <p class="mt-4 text-sm leading-relaxed text-[var(--color-muted)]">{answer}</p>
</details>
