---
interface Props {
  label: string;
  value: string;
  hint?: string;
  note?: string;
  tooltip?: string;
}

const { label, value, hint, note, tooltip } = Astro.props as Props;
---
<dl class="reveal kpi-card min-w-[220px] text-left text-pretty">
  <dt class="flex items-center gap-2 text-sm font-medium uppercase tracking-wide text-primary/80">
    <span>{label}</span>
    {tooltip && (
      <span
        class="inline-flex h-5 w-5 items-center justify-center rounded-full border border-primary/40 text-primary/80"
        title={tooltip}
        aria-label={tooltip}
      >
        i
      </span>
    )}
  </dt>
  <dd class="mt-2 text-3xl font-semibold leading-tight text-primary">{value}</dd>
  {hint && <dd class="mt-3 text-sm leading-relaxed on-surface line-clamp-3">{hint}</dd>}
  {note && <dd class="mt-3 text-xs leading-relaxed text-textMuted line-clamp-3">{note}</dd>}
</dl>
