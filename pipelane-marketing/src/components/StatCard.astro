---
import Icon from "./Icon.astro";

interface Props {
  metric: string;
  description: string;
  icon?: string;
}

const { metric, description, icon } = Astro.props as Props;
---
<div class="reveal glass min-w-[260px] rounded-3xl border border-line/30 p-6 text-left">
  <div class="flex items-start gap-3">
    {icon && (
      <span class="mt-1 text-primary">
        <Icon name={icon} size={26} />
      </span>
    )}
    <div>
      <p class="text-3xl font-semibold leading-tight text-primary">{metric}</p>
      <p class="mt-3 text-sm leading-relaxed text-onSurfaceStrong break-words text-pretty">{description}</p>
    </div>
  </div>
</div>



