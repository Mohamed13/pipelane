---
interface Props {
  label: string;
  value: string;
  hint?: string;
}

const { label, value, hint } = Astro.props as Props;
---
<dl class="reveal glass min-w-[220px] rounded-3xl border border-line/35 p-6 text-left text-pretty md:p-7">
  <dt class="text-sm font-medium uppercase tracking-wide text-primary/80">{label}</dt>
  <dd class="mt-2 text-3xl font-semibold leading-tight text-primary">{value}</dd>
  {hint && <dd class="mt-3 text-sm leading-relaxed on-surface">{hint}</dd>}
</dl>
