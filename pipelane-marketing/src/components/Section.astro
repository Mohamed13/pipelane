---
import NeonBadge from "./NeonBadge.astro";

interface Props {
  id: string;
  title: string;
  eyebrow?: string;
  description?: string;
  center?: boolean;
}

const { id, title, eyebrow, description, center = false } = Astro.props as Props;
---
<section id={id} class="py-20 lg:py-28" aria-labelledby={`${id}-title`}>
  <div class="container">
    <div class={`max-w-3xl ${center ? "mx-auto text-center" : ""}`}>
      {eyebrow && (
        <div class="mb-6">
          <NeonBadge text={eyebrow} />
        </div>
      )}
      <h2 id={`${id}-title`} class="text-3xl font-semibold tracking-tight sm:text-4xl">
        {title}
      </h2>
      {description && (
        <p class={`mt-4 text-lg text-[var(--color-muted)] ${center ? "mx-auto" : ""}`}>
          {description}
        </p>
      )}
    </div>
    <div class={`mt-12 grid gap-10 ${center ? "place-items-center" : ""}`}>
      <slot />
    </div>
  </div>
</section>
