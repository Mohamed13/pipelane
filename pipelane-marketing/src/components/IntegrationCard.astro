---
import Icon from "./Icon.astro";

interface Props {
  icon: string;
  label: string;
}

const { icon, label } = Astro.props as Props;
---
<div class="reveal glass flex items-center gap-3 rounded-2xl border border-line/25 px-5 py-4 transition-transform duration-300 hover:-translate-y-1 hover:border-primary/50">
  <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-primary/16 text-primary">
    <Icon name={icon} size={22} />
  </div>
  <span class="text-sm font-medium tracking-wide on-surface-strong">{label}</span>
</div>
