---
import BaseLayout from "@layouts/Base.astro";
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";
import CTA from "@components/CTA.astro";
import FlowStep from "@components/FlowStep.astro";
import FeatureCard from "@components/FeatureCard.astro";
import StatCard from "@components/StatCard.astro";
import NeonBadge from "@components/NeonBadge.astro";

const heroChips = [
  "+ de réponses (+ more replies)",
  "Zéro oubli (+ zero missed follow-up)",
  "Tout au même endroit (+ everything in one place)",
];

const leadHunterBullets = [
  "Critères simples (secteur, zone, avis, site, réseaux) (Simple criteria: vertical, area, reviews, site, socials)",
  "Liste scorée + raison claire (Scored list + transparent why)",
  "1-clic : créer la liste → créer la cadence (1-click list → cadence)",
];

const cadenceColumns = [
  { channel: "Email", icon: "mail" },
  { channel: "WhatsApp", icon: "smartphone" },
  { channel: "SMS", icon: "sms" },
];

const cadenceHighlights = [
  "Caps/jour protégés (Daily caps protected)",
  "Fenêtres horaires (Quiet hours windows)",
  "Variantes A/B légères (Lightweight A/B variants)",
];

const bookingBullets = [
  "Intent 0–100 (intent score 0–100)",
  "2-slot offer (2 time-slot offer)",
  "Ajout auto au calendrier/CRM (Auto calendar/CRM update)",
];

const followupWhy = [
  "Ancienneté de l’échange (Age of last exchange)",
  "Heure locale qui performe (Local time that converts)",
  "Angle valeur pour ce secteur (Value angle tuned to vertical)",
];

const followupNotice =
  "Respect opt-out/STOP et policy WhatsApp 24h (HSM si hors fenêtre). (EN: Respect opt-out/STOP and WhatsApp 24h policy — HSM if outside window.)";

const timelineFlow = [
  {
    title: "Trouver",
    description: "Lead Hunter IA → liste scorée (Lead Hunter AI → scored list)",
    icon: "search",
  },
  {
    title: "Prospecter",
    description: "Cadence Email/WA/SMS (Email/WA/SMS cadence)",
    icon: "send",
  },
  {
    title: "Relancer",
    description: "Moment + angle + message court (Timing + angle + short message)",
    icon: "bolt",
  },
  {
    title: "Booker",
    description: "2 créneaux → confirmation → CRM (Two slots → confirm → CRM)",
    icon: "calendar",
  },
];

const statHighlights = [
  { label: "TTR", value: "26 s", hint: "réponse inbound moyenne (avg inbound time-to-reply)" },
  { label: "Reply rate", value: "12 %", hint: "sur 30 jours (last 30 days)" },
  { label: "RDV / 100", value: "8", hint: "dépend du secteur (per 100 leads, varies by vertical)" },
];

const pageTitle = "Pipelane – Lead Hunter → Cadences → Relance → 2 créneaux";
const pageDescription =
  "Pipelane repère les bons prospects, lance vos cadences multi-canales, relance intelligemment et propose 2 créneaux. Vous ne gérez que les rendez-vous chauds.";

const productSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  name: "Pipelane",
  description: "Qualify • Relaunch • Book",
  brand: { "@type": "Brand", name: "Pipelane" },
  offers: [
    {
      "@type": "Offer",
      priceCurrency: "EUR",
      price: "290",
      availability: "https://schema.org/InStock",
      url: "https://www.pipelane.app/prix",
    },
  ],
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "Comment fonctionne le flux Lead Hunter → Booking ?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "L’agent repère vos prospects, crée la cadence multi-canale, relance intelligemment et propose 2 créneaux. Vous n’intervenez que pour les réponses chaudes.",
      },
    },
    {
      "@type": "Question",
      name: "Quid de la conformité (email, SMS, WhatsApp) ?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Caps journaliers, STOP SMS, lien de désinscription email et règles WhatsApp 24h/CTA HSM sont appliqués automatiquement.",
      },
    },
    {
      "@type": "Question",
      name: "Aurai-je besoin d’autres outils pour commencer ?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Non. Pipelane gère sourcing, cadences, relances et booking. Des ports optionnels existent si vous devez pousser vers votre CRM.",
      },
    },
  ],
};
---
<BaseLayout title={pageTitle} description={pageDescription} canonical="https://www.pipelane.app">
  <Navbar currentPath={Astro.url.pathname} />
  <main class="space-y-32 lg:space-y-44">
    <section id="hero" class="section relative overflow-hidden">
      <div class="container-page grid items-center gap-12 lg:grid-cols-[minmax(0,1fr)_minmax(0,0.95fr)]">
        <div class="space-y-8">
          <NeonBadge text="Lead Hunter → Cadences → Relance → Booking" />
          <h1 class="text-balance font-semibold on-surface-strong max-w-[42ch]">
            Votre agent qui trouve des clients et remplit votre agenda (EN: The agent that finds clients and fills your calendar)
          </h1>
          <p class="max-w-[48ch] text-lg leading-relaxed on-surface">
            Pipelane repère les bons prospects avec une recherche intelligente, lance des séquences multi-canales (Email/WhatsApp/SMS), relance au bon moment et propose 2 créneaux — vous ne gérez que les RDV chauds. (EN: Smart lead hunting + multi-channel cadences + smart follow-ups + 2-slot booking.)
          </p>
          <ul class="flex flex-wrap gap-2 text-xs font-semibold uppercase tracking-[0.3em]">
            {heroChips.map((chip) => (
              <li class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-xs uppercase tracking-[0.28em] on-surface-strong">
                <span class="h-1.5 w-1.5 rounded-full bg-primary/90"></span>
                {chip}
              </li>
            ))}
          </ul>
          <div class="flex flex-col gap-3 pt-4 sm:flex-row sm:items-center">
            <a
              href="/#demo"
              class="btn-primary min-h-[44px] rounded-xl px-6 shadow-glow focus:outline-none focus-visible:ring-2 focus-visible:ring-primary/60"
              data-analytics="cta_click"
              data-location="hero-primary"
            >
              Demander une démo (EN: Request a demo)
            </a>
            <a
              href="#de-a-a-z"
              class="btn-ghost min-h-[44px] rounded-xl px-6 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary/60"
              data-analytics="cta_click"
              data-location="hero-secondary"
            >
              Voir comment ça marche (EN: See how it works)
            </a>
          </div>
        </div>
        <div class="relative isolate" data-parallax data-parallax-speed="0.22">
          <div class="absolute -left-16 -top-20 h-56 w-56 rounded-full bg-primary/28 blur-3xl"></div>
          <div class="absolute -bottom-16 right-0 h-60 w-60 rounded-full bg-secondary/24 blur-3xl"></div>
          <div class="relative space-y-5">
            <div class="glass overflow-hidden rounded-[28px] border border-line/25 p-6 shadow-soft">
              <div class="space-y-5">
                <div class="flex items-center justify-between rounded-2xl border border-primary/20 bg-primary/10 px-4 py-3 text-sm text-primary">
                  <span>Lead Hunter IA</span>
                  <span>Score 0–100</span>
                </div>
                <div class="grid gap-3 text-sm on-surface">
                  <div class="glass flex items-center justify-between rounded-2xl border border-line/25 bg-surfaceOverlay/80 px-4 py-3">
                    <div>
                      <p class="font-semibold on-surface-strong">Maison Nova · 94</p>
                      <p class="text-xs text-textMuted">Paris · Site lent mobile (EN: Slow mobile site)</p>
                    </div>
                    <span class="rounded-full bg-primary/15 px-3 py-1 text-xs text-primary/90">Why this lead?</span>
                  </div>
                  <div class="glass flex items-center justify-between rounded-2xl border border-line/25 bg-surfaceOverlay/70 px-4 py-3">
                    <div>
                      <p class="font-semibold on-surface-strong">Bistro Lumen · 88</p>
                      <p class="text-xs text-textMuted">Lyon · Pas de réservation en ligne (EN: No online booking)</p>
                    </div>
                    <span class="rounded-full bg-primary/15 px-3 py-1 text-xs text-primary/90">Score élevé</span>
                  </div>
                </div>
                <div class="rounded-2xl border border-line/30 bg-surfaceOverlay/70 p-4 text-sm on-surface">
                  <p class="text-xs uppercase tracking-[0.3em] text-primary">Cadence active</p>
                  <p class="mt-2 on-surface-strong">Email → WhatsApp → SMS</p>
                  <p class="text-xs text-textMuted">Caps/jour OK · Quiet hours respectées · Variantes A/B légères</p>
                </div>
                <div class="rounded-2xl border border-line/30 bg-surfaceOverlay/70 p-5 text-sm on-surface">
                  <p class="text-xs uppercase tracking-[0.3em] text-primary">Relance intelligente</p>
                  <p class="mt-2 font-semibold on-surface-strong">“Bonjour Camille, voici le cas NovaOps qui a doublé ses RDV en 5 semaines, je vous l’envoie ?”</p>
                  <p class="mt-2 text-xs text-textMuted">Dernier échange lu · Pas de réponse depuis 3 jours</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="lead-hunter" class="section">
      <div class="container-page grid gap-10 lg:grid-cols-[minmax(0,1.1fr)_minmax(0,0.9fr)]">
        <div class="space-y-6">
          <NeonBadge text="Lead Hunter IA" />
          <h2 class="text-balance text-3xl font-semibold tracking-tight on-surface-strong sm:text-4xl">
            Trouvez les bons prospects en 60 secondes (EN: Find the right prospects in 60 seconds)
          </h2>
          <p class="text-base leading-relaxed on-surface">
            Décrivez votre cible ou choisissez un secteur. L’agent analyse cartes, annuaires et données publiques, enrichit (site/email/réseaux), applique un scoring 0–100 et affiche des raisons claires “Pourquoi ce lead ?”. (EN: Describe your target or pick a vertical. The agent enriches, scores 0–100 and explains why each lead matters.)
          </p>
          <ul class="space-y-3 text-sm leading-relaxed on-surface">
            {leadHunterBullets.map((bullet) => (
              <li class="flex items-start gap-2">
                <span class="mt-1 h-2 w-2 rounded-full bg-primary/80"></span>
                <span>{bullet}</span>
              </li>
            ))}
          </ul>
        </div>
        <FeatureCard
          title="Why this lead?"
          badge="Score 0–100"
          bullets={["Pas de réservation en ligne", "Site lent mobile", "Instagram actif"]}
        />
        <div class="lg:col-span-2">
          <a
            href="/prospection-ia"
            class="inline-flex items-center gap-3 text-sm font-semibold uppercase tracking-[0.3em] text-primary transition hover:text-primary/80"
            data-analytics="cta_click"
            data-location="lead-hunter-link"
          >
            Voir l’agent de prospection (EN: Explore the prospecting agent)
            <span aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </section>

    <section id="cadences" class="section bg-surface/40">
      <div class="container-page space-y-10">
        <div class="space-y-4 text-center">
          <NeonBadge text="Cadences multi-canales" />
          <h2 class="text-3xl font-semibold tracking-tight on-surface-strong sm:text-4xl">
            Prospectez en Email, WhatsApp et SMS en gardant la main (EN: Multi-channel cadences without losing control)
          </h2>
          <p class="mx-auto max-w-3xl text-base leading-relaxed on-surface">
            L’IA rédige des messages courts et utiles (≤120 mots), FR/EN. (EN: AI writes short, useful messages (≤120 words) in FR/EN.)
          </p>
        </div>
        <div class="grid gap-6 md:grid-cols-3">
          {cadenceColumns.map((column) => (
            <div class="glass rounded-3xl border border-line/30 p-6 text-left shadow-soft">
              <p class="text-sm font-semibold uppercase tracking-[0.3em] text-primary">{column.channel}</p>
              <ul class="mt-4 space-y-3 text-sm leading-relaxed on-surface">
                {cadenceHighlights.map((highlight) => (
                  <li class="flex items-start gap-2">
                    <span class="mt-1 h-1.5 w-1.5 rounded-full bg-primary/80"></span>
                    <span>{highlight}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
        <div class="rounded-3xl border border-primary/25 bg-primary/10 p-5 text-sm text-primary">
          Conformité : Email (désinscription), SMS (STOP), WhatsApp 24h (HSM si hors fenêtre). (EN: Compliance: Email unsubscribe, SMS STOP, WhatsApp 24h/HSM if outside the window.)
        </div>
      </div>
    </section>

    <section id="qualification" class="section">
      <div class="container-page grid gap-12 lg:grid-cols-[minmax(0,1fr)_minmax(0,0.9fr)]">
        <div class="space-y-6">
          <NeonBadge text="Qualification & Booking" />
          <h2 class="text-3xl font-semibold tracking-tight on-surface-strong sm:text-4xl">
            Qualifiez en 3–5 questions, proposez 2 créneaux (EN: Qualify in 3–5 questions, offer 2 slots)
          </h2>
          <p class="text-base leading-relaxed on-surface">
            Dès qu’un prospect répond, l’agent pose 3–5 questions, score l’intention, puis propose 2 créneaux (ou un lien) et confirme le RDV. (EN: Once a reply lands, the agent qualifies with a few questions, scores intent and offers two slots or a booking link.)
          </p>
          <ul class="space-y-3 text-sm leading-relaxed on-surface">
            {bookingBullets.map((bullet) => (
              <li class="flex items-start gap-2">
                <span class="mt-1 h-2 w-2 rounded-full bg-primary/80"></span>
                <span>{bullet}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="glass rounded-3xl border border-line/30 p-6 shadow-soft">
          <p class="text-xs uppercase tracking-[0.3em] text-primary">Offre 2 créneaux (EN: Two-slot offer)</p>
          <div class="mt-5 space-y-4 text-sm on-surface">
            <div class="flex items-center justify-between rounded-2xl border border-line/30 bg-surfaceOverlay/70 px-4 py-3">
              <p class="font-semibold on-surface-strong">Mar 10:00–10:30</p>
              <button class="rounded-full border border-primary/30 px-3 py-1 text-xs text-primary">
                Confirmer (EN: Confirm)
              </button>
            </div>
            <div class="flex items-center justify-between rounded-2xl border border-line/30 bg-surfaceOverlay/60 px-4 py-3">
              <p class="font-semibold on-surface-strong">Mer 15:30–16:00</p>
              <button class="rounded-full border border-primary/30 px-3 py-1 text-xs text-primary">
                Confirmer (EN: Confirm)
              </button>
            </div>
          </div>
          <div class="mt-6 rounded-2xl border border-primary/25 bg-primary/10 p-4 text-xs text-primary">
            Synchronisation calendrier & CRM automatisée (EN: Calendar & CRM sync handled automatically)
          </div>
        </div>
      </div>
    </section>

    <section id="relance" class="section bg-surface/40">
      <div class="container-page grid gap-12 lg:grid-cols-[minmax(0,1.05fr)_minmax(0,0.95fr)]">
        <div class="glass rounded-3xl border border-line/30 p-6 shadow-soft">
          <p class="text-xs uppercase tracking-[0.3em] text-primary">Relance mardi 10:30 · angle valeur (EN: Follow-up Tuesday 10:30 · value angle)</p>
          <p class="mt-4 text-base leading-relaxed on-surface">
            « Bonjour Camille, vous m’indiquiez chercher un moyen d’automatiser vos relances.
            Voici comment NovaOps a doublé ses RDV en 5 semaines, je vous envoie le cas ? » (EN: “Hi Camille, you were looking to automate follow-ups. NovaOps doubled meetings in 5 weeks — want the case study?”)
          </p>
          <p class="mt-4 text-xs text-textMuted">Dernier échange lu · Pas de réponse depuis 3 jours (Last exchange read · No reply for 3 days)</p>
        </div>
        <div class="space-y-5">
          <div class="glass rounded-3xl border border-line/30 p-6 shadow-soft">
            <p class="text-xs uppercase tracking-[0.3em] text-primary">Pourquoi ce choix ? (Why this choice?)</p>
            <ul class="mt-4 space-y-3 text-sm leading-relaxed on-surface">
              {followupWhy.map((item) => (
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-2 w-2 rounded-full bg-primary/80"></span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>
          <div class="rounded-3xl border border-primary/25 bg-primary/10 p-4 text-xs text-primary">
            {followupNotice}
          </div>
        </div>
      </div>
    </section>

    <section id="de-a-a-z" class="section">
      <div class="container-page space-y-10">
        <div class="space-y-3 text-center">
          <NeonBadge text="De A à Z" />
          <h2 class="text-3xl font-semibold tracking-tight on-surface-strong sm:text-4xl">
            De la recherche au RDV, en 4 étapes (EN: From discovery to booked meeting in 4 steps)
          </h2>
          <p class="text-sm uppercase tracking-[0.3em] text-textMuted">(Find → Prospect → Nurture → Book)</p>
        </div>
        <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-4">
          {timelineFlow.map((step, index) => (
            <FlowStep title={step.title} description={step.description} icon={step.icon} index={index} />
          ))}
        </div>
      </div>
    </section>

    <section id="preuves" class="section bg-surface/40">
      <div class="container-page space-y-10">
        <div class="space-y-4 text-center">
          <NeonBadge text="Preuve & réassurance" />
          <h2 class="text-3xl font-semibold tracking-tight on-surface-strong sm:text-4xl">
            Des métriques qui montent sans complexité (EN: Metrics up, friction down)
          </h2>
        </div>
        <div class="grid gap-6 md:grid-cols-3">
          {statHighlights.map((stat) => (
            <StatCard label={stat.label} value={stat.value} hint={stat.hint} />
          ))}
        </div>
        <div class="flex justify-center">
          <a
            href="/securite-rgpd"
            class="inline-flex items-center gap-3 text-sm font-semibold uppercase tracking-[0.3em] text-primary transition hover:text-primary/80"
          >
            Sécurité & RGPD (Security & GDPR)
            <span aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </section>

    <CTA
      id="demo"
      title="Remplissez votre pipe sans écrire un seul email."
      description="Activez Lead Hunter, cadences multi-canales et booking 2 créneaux en moins d’une heure."
      primary={{
        label: "Demander une démo",
        href: "/#demo",
        analyticsId: "cta-demo-primary",
      }}
      secondary={{
        label: "Voir l’agent de prospection",
        href: "/prospection-ia",
        analyticsId: "cta-demo-secondary",
      }}
    />
  </main>
  <Footer />
  <script type="application/ld+json">{JSON.stringify(productSchema)}</script>
  <script type="application/ld+json">{JSON.stringify(faqSchema)}</script>
</BaseLayout>
